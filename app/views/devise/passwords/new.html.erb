<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--1-col"></div>
  <div class="mdl-cell mdl-cell--10-col">
    <h2 class="mdl-typography--display-2 mdl-typography--font-thin">Forgot your password?</h2>
    <div id="sign">
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.email_field :email, class: "mdl-textfield__input", autofocus: true %>
              <%= f.label :email, class: "mdl-textfield__label" %>
            </div>
            <p>
            <%= f.submit "Send me reset password instructions", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %>
            </p>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--1-col"></div>
</div>