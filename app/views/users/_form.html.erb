<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--1-col"></div>
  <div class="mdl-cell mdl-cell--10-col">
    <h2 class="mdl-typography--display-2 mdl-typography--font-thin">Editing User</h2>
    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
      </ul>
    <% end %>
    <div class="description">
      <!-- <p>*各項目は全て必須</p> -->
    </div>
    <div id="post">
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
          <form action="#">

            <div class="mdl-textfield">
              <%= f.label :avatar, class: "input-label" %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :user_id, value: current_user.id %>
            </div>


            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_area :name, class: "mdl-textfield__input"%>
              <%= f.label :name, class: "mdl-textfield__label" %>
            </div>


            <!-- <div class="mdl-textfield mdl-js-textfield">
              <textarea class="mdl-textfield__input" type="text" rows="2" id="text7"></textarea>
              <label class="mdl-textfield__label" for="text7">Address(*required)</label>
            </div> -->

            <%= f.submit "Profile Update", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %>
          </form>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="mdl-cell mdl-cell--1-col"></div>
</div>
